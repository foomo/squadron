{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 80,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!squadron.schema.json"]
	}
}
